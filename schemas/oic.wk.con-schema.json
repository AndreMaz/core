{
  "id": "https://www.openconnectivity.org/ocf-apis/core/schemas/oic.wk.con-schema.json#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description" : "Copyright (c) 2016, 2017 Open Connectivity Foundation, Inc. All rights reserved.",
  "definitions": {
    "oic.wk.con": {
      "type": "object",
      "properties": {
        "loc": {
          "type": "array",
          "description": "Location information encoded as a 2-elment array of floats (lat, long)",
          "items": {
            "type": "number"
          },
          "minItems": 2,
          "maxItems": 2
        },
        "locn": {
          "type": "string",
          "maxLength": 64,
          "description": "Human Friendly Name for location encoded as a string"
        },
        "c": {
          "type": "string",
          "maxLength": 64,
          "description": "Currency encoded as a string"
        },
        "r": {
          "type": "string",
          "maxLength": 64,
          "description": "Region encoded as a string"
        },
        "ln": {
          "type": "array",
          "items" :
            {
              "type": "object",
              "properties": {
                "language": {
                  "allOf": [
                    {
                      "$ref": "oic.types-schema.json#/definitions/language-tag"
                    },
                    {
                      "description": "A string formatted as an RFC 5646 language tag."
                    }
                  ]
                },
                "value": {
                  "type": "string",
                  "maxLength": 64,
                  "description": "String containing the Device name in the indicated language."
                }
              }
            },
          "minItems" : 1,
          "description": "Localized names encoded as an array of objects"
        },
        "dl": {
          "allOf": [
            {
              "$ref": "oic.types-schema.json#/definitions/language-tag"
            },
            {
              "description": "Default Language encoded as a string formatted as an RFC 5646 language tag."
            }
          ]
        }
      }
    }
  },
  "type": "object",
  "allOf": [
    { "$ref": "oic.core-schema.json#/definitions/oic.core"},
    { "$ref": "#/definitions/oic.wk.con" }
  ],
  "required": ["n"]
}
